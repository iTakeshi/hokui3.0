<h1>新しい期を登録</h1>

<%= form_for @year, url: admin_years_path, html: { class: "form-horizontal" } do |f| %>
  <% if @year.errors.any? %>
    <div class="form-errors">
      <h3><%= @year.errors.count %>個の項目にエラーがあります。登録に失敗しました。</h3>
      <ul>
        <% @year.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :class_year, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :class_year %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '登録', class: 'btn btn-primary', data: { disable_with: '送信中...' } %>
    </div>
  </fieldset>
<% end %>
