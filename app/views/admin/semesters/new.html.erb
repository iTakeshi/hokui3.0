<h1>新学期を登録</h1>

<%= form_for @year_semester, url: admin_year_semesters_path(@year), html: { class: "form-horizontal" } do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :identifier, class: 'control-label' %>
      <div class="controls">
        <%= f.select :identifier, options_for_select(@identifier_options), prompt: '選択' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '登録', class: 'btn btn-primary', data: { disable_with: '送信中...' } %>
    </div>
  </fieldset>
<% end %>
