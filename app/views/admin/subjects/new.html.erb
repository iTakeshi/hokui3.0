<h1>教科登録</h1>

<%= form_for @subject, url: admin_subjects_path, html: { class: "form-horizontal" } do |f| %>
  <% if @subject.errors.any? %>
    <div class="form-errors">
      <h3><%= @subject.errors.count %>個の項目にエラーがあります。登録に失敗しました。</h3>
      <ul>
        <% @subject.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :title_ja, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :title_ja %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :title_en, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :title_en %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :staff_name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :staff_name %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '登録', class: 'btn btn-primary', data: { disable_with: '送信中...' } %>
    </div>
  </fieldset>
<% end %>
