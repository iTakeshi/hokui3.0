<h1>プロフィールを編集</h1>

<p>
  <%= link_to 'パスワードを変更', password_profile_path, class: 'btn btn-primary' %>
</p>

<%= form_for @user, url: profile_path, html: { class: 'form-horizontal' } do |f| %>
  <% if @user.errors.any? %>
    <div class="form-errors">
      <h3><%= @user.errors.count %>個の項目にエラーがあります。更新に失敗しました。</h3>
      <ul>
        <% @user.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <div class="controls"</div>
        ニックネーム、期、および携帯メールアドレスを更新できます。
      </div>
    </div>

    <div class="control-group">
      <%= f.label :family_name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :family_name, disabled: true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :given_name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :given_name, disabled: true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :handle_name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :handle_name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :birthday, class: 'control-label' %>
      <div class="controls">
        <%= f.date_select :birthday, start_year: 1970, end_year: 2000, use_month_numbers: true, prompt: { day: '日', month: '月', year: '年' }, disabled: true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :year_id, '期', class: 'control-label' %>
      <div class="controls">
        <%= f.select :year_id, options_from_collection_for_select(Year.all, :id, :class_year), prompt: '選択' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email_official, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email_official, disabled: true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email_private, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email_private %> 空欄可
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '更新', class: 'btn btn-primary', data: { disable_with: '送信中...' } %>
    </div>
  </fieldset>
<% end %>

<% @is_profile_page = true %>
