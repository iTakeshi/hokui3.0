<h1>新規ユーザー登録</h1>

<%= form_for @user, url: signup_path, html: { class: 'form-horizontal' } do |f| %>
  <% if @user.errors.any? %>
    <div class="form-errors">
      <h3><%= @user.errors.count %>個の項目にエラーがあります。登録に失敗しました。</h3>
      <ul>
        <% @user.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :family_name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :family_name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :given_name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :given_name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :handle_name, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :handle_name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :birthday, class: 'control-label' %>
      <div class="controls">
        <%= f.date_select :birthday, start_year: 1970, end_year: 2000, use_month_numbers: true, prompt: { day: '日', month: '月', year: '年' } %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :year_id, '期を選択', class: 'control-label' %>
      <div class="controls">
        <%= f.select :year_id, options_from_collection_for_select(Year.all, :id, :class_year), prompt: '選択' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email_official, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email_official %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email_private, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email_private %> 空欄可
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, 'パスワードの確認', class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '登録', class: 'btn btn-primary', data: { disable_with: '送信中...' } %>
    </div>
  </fieldset>
<% end %>
